---
import { marked } from 'marked';
import { type LogosSection } from 'types';
import LogoStripAnimated from '@components/LogoStripAnimated.astro';
import LogoStripStatic from '@components/LogoStripStatic.astro';
import Section from '@components/Section.astro';

interface Props extends LogosSection {}

const { heading, body, items, motion, ...rest } = Astro.props;
---

<Section {...rest} class="text-center">
    {
        heading && (
            <h2 class="text-2xl font-black sm:text-4xl text-balance">
                {heading}
            </h2>
        )
    }
    {body && <div class:list={['mx-auto', heading && 'mt-4', 'max-w-prose markdown']} set:html={marked.parse(body)} />}
    {
        items &&
            items.length > 0 &&
            (motion !== 'static' ? (
                <LogoStripAnimated items={items} motion={motion} class={heading || body ? 'mt-8' : undefined} />
            ) : (
                <LogoStripStatic items={items} class={heading || body ? 'mt-8' : undefined} />
            ))
    }
</Section>
