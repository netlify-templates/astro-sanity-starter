---
import { Image } from 'astro:assets';

interface Props {
    _id?: string;
    src: string;
    width: number;
    height: number;
    alt?: string;
    class?: string;
}

const { src, width, height, alt, class: className } = Astro.props;

const format = src?.includes('.svg') ? 'svg' : 'webp';
---

<Image src={src} width={width} height={height} alt={alt || ''} format={format} class:list={className} />
